# FloorballStatsTracker Docker Environment Variables
# Copy this file to .env on your Docker server and fill in the values

# REQUIRED: PIN for application authentication (minimum 6 characters)
# Generate with: openssl rand -hex 16
FLOORBALL_PIN=your_secure_pin_here

# REQUIRED: Flask secret key for session security
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your_secret_key_here

# Session cookie security (set to True for HTTPS/production)
SESSION_COOKIE_SECURE=True

# Default language (en or it)
DEFAULT_LANG=en
